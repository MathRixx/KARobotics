@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using KAR_Robotics
@inject IStringLocalizer<SharedResource> Localizer
<!--Features Section-->
<section id="features" class="features section">
    <!-- Section Title -->
    <div class="container section-title pb-3" data-aos="fade-up">
        <h2>@Localizer["FeaturesH2"]</h2>
        <p>@Localizer["FeaturesP"]</p>
    </div><!-- End Section Title -->
    <div class="container">
        <div class="row gy-4">

            <div class="col-lg-6 offset-lg-6" id="pr">
                <div class="features-item d-flex align-items-center ps-0 ps-lg-3 justify-content-end text-end" data-aos="fade-up" data-aos-delay="100">
                    <div>
                        <h4>@Localizer["FeaturesH4PR"]</h4>
                        <p>@Localizer["FeaturesPPR"]</p>
                    </div>
                    <i class="bi bi-camera flex-shrink-0" style="margin-left: 20px;"></i>
                </div>
            </div>

            <div class="col-lg-6" id="coding">
                <div class="features-item align-items-center d-flex ps-0 ps-lg-3" data-aos="fade-up" data-aos-delay="200">
                    <i class="bi bi-code flex-shrink-0"></i>
                    <div>
                        <h4>@Localizer["FeaturesH4Code"]</h4>
                        <p>@Localizer["FeaturesPCode"]</p>
                    </div>
                </div>
            </div>

            <!-- 3. Satır: Sağda ikon, solda metin -->
            <div class="col-lg-6 offset-lg-6" id="mechanic">
                <div class="features-item  align-items-center d-flex ps-0 ps-lg-3 justify-content-end text-end" data-aos="fade-up" data-aos-delay="300">
                    <div>
                        <h4>@Localizer["FeaturesH4Mechanics"]</h4>
                        <p>@Localizer["FeaturesPMechanics"]</p>
                    </div>
                    <i class="bi bi-tools flex-shrink-0" style="margin-left: 20px;"></i>
                </div>
            </div>

            <!-- 4. Satır: Solda ikon, sağda metin -->
            <div class="col-lg-6" id="electronic">
                <div class="features-item align-items-center d-flex ps-0 ps-lg-3" data-aos="fade-up" data-aos-delay="400">
                    <i class="bi bi-cpu flex-shrink-0"></i>
                    <div>
                        <h4>@Localizer["FeaturesH4Electronics"]</h4>
                        <p>@Localizer["FeaturesPElectronics"]</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!--End Features Section-->